  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go: Remote Attach (Delve)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app/",
      "port": 2345,
      "host": "127.0.0.1",
      "trace": "verbose"
    },
    {
      "name": "Go: Debug Server (Delve)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}"
      // "trace": "verbose",
      // "env": {},
      // "args": [],
      // "logOutput": "debugger",
      // "showLog": true,
    },
    {
      "name": "Debug Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceRoot}/parcels"
    }
